<%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/form.css">
</head>
<body>
    <%- include('../partials/navigation') %>
    <main>
        <% if(errorMessage) { %>
        <div><%= errorMessage %></div>
        <% } %>
        <form class="product-form" action="/admin/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-control">
                <label for="Product Name">Name</label>
                <input type="text" name="fullName" id="" placeholder="John Doe" value="" />
    
                <label for="Price">Email</label>
                <input type="email" name="email" placeholder="john.doe@email.com" id="price" value="">

                <label for="Price">Password</label>
                <input type="password" name="password" placeholder="" id="price" value="">

                <label for="Price">Confirm Password</label>
                <input type="password" name="confirmPassword" id="price" value="">
    
            </div>
            <button type="submit">Sign Up!</button>
        </form>
    </main>    
<%- include('../partials/end') %>