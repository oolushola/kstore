<%- include('../partials/head') %>
    <link rel="stylesheet" type="text/css" href="/css/product.css">
    <link rel="stylesheet" href="/css/form.css">
</head>
<body>
    <%- include('../partials/navigation.ejs') %>
    <main>
        <h2><%= productDetails.title %></h2>
        <hr>
        <img src="https://cdn.elearningindustry.com/wp-content/uploads/2016/05/top-10-books-every-college-student-read-1024x640.jpeg" alt="Book" height="20%" width="20%" >
        <p>$<%= productDetails.price %></p>
        <p>Intro: <%= productDetails.description %></p>
        <form action="/cart" method="POST">
            <button type="submit">Add to Cart</button>
            <input type="hidden" name="productId" value="<%= productDetails.id %>">
        </form>
        <a href="/">Go back to Shop</a>

    </main>
<%- include('../partials/end') %>